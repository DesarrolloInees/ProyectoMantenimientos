Options -MultiViews
Options -Indexes
RewriteEngine On

# ==============================================================
# 游꿢 CAMBIO CLAVE: Apuntamos a la carpeta del NUEVO proyecto
# ==============================================================
RewriteBase /ProyectoMantenimientos/

# --- Reglas de reescritura (Adaptadas del Proyecto Antiguo) ---

# 1. Regla para URLs con ID o Par치metro (ej. /ordenDetalle/5)
# Esto permite que hagas $_GET['id'] en tu PHP igual que antes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^/]+)/([^/]+)/?$ index.php?pagina=$1&id=$2 [L,QSA]

# 2. Regla para URLs con dos par치metros extra (ej. /tabla/filtro/asc)
# Esto permite $_GET['valor'] y $_GET['orden']
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^/]+)/([^/]+)/([^/]+)/?$ index.php?pagina=$1&valor=$2&orden=$3 [L,QSA]

# 3. Regla para URLs simples (ej. /login, /inicio, /logout)
# Esto es lo que quer칤as: URL limpia sin par치metros extra침os
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^/]*)$ index.php?pagina=$1 [L,QSA]